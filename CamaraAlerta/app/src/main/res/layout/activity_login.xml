<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.petasoft.camaraalerta.LoginActivity">

    <TextView
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editLogin"
        android:text="UsuÃ¡rio"
        />

    <TextView
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editPassword"
        android:text="Senha"
        />

    <EditText
        android:id="@+id/editLogin"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/editPassword"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/editPassword"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editPassword"
        android:layout_margin="10dp"
        android:layout_width="460dp"
        android:layout_height="wrap_content"
        android:text="ENTRAR"
        android:textColor="#FFFFFF"
        android:background="#A5CA6F"
        android:onClick="normalLogin"/>

    <TextView
        android:id="@+id/esqueciSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueci minha senha"
        android:layout_below="@+id/loginButton"
        android:layout_margin="10dp"
        android:onClick="esqueciSenha"
        />

    <TextView
        android:id="@+id/registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registre-se"
        android:layout_below="@+id/loginButton"
        android:layout_alignRight="@+id/loginButton"
        android:layout_margin="10dp"
        android:onClick="registrarConta"
        />

    <TextView
        android:id="@+id/ouText"
        android:layout_below="@+id/esqueciSenha"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:text="OU"
        />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="145dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="110dp"
        android:layout_below="@+id/ouText" />


    <Button
        android:id="@+id/gPlusStub"
        android:layout_width="145dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/login_button"
        android:layout_below="@+id/ouText"
        android:background="#DD4B39"
        />


</RelativeLayout>
