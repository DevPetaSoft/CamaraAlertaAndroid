<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    tools:context="br.com.petasoft.camaraalerta.activity.TermoCompromisso">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/wrapperToolbar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarTermo"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wrapperToolbar">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">
            <ImageView
                android:id="@+id/logoCamara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="120dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true"

                android:src="@drawable/logosmall"/>
            <TextView
                android:id="@+id/titulo"
                android:layout_below="@+id/logoCamara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:paddingBottom="16dp"
                android:text="Termos e Condições"/>
            <TextView
                android:id="@+id/termoIntro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/titulo"
                android:textColor="@color/white"
                android:text="@string/termoIntro"/>
            <LinearLayout
                android:layout_below="@id/termoIntro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin">
                <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                    android:paddingTop="8dp"
                android:textColor="@color/white"
                android:text="1.	SOBRE O SERVIÇO"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/white"
                    android:text="@string/termo1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="2.	DAS MODALIDADES DE SERVIÇO"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/white"
                    android:text="@string/termo2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="3.	SOBRE A UTILIZAÇÃO DO CAMARA ALERTA APP"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/white"
                    android:text="@string/termo3"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="4.	CONDIÇÕES DE UTILIZAÇÃO DO CAMARA ALERTA"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/white"
                    android:text="@string/termo4"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="5.	RESPONSABILIDADE CIVIL E CRIMINAL"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/white"
                    android:text="@string/termo5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="6.	CADASTRO DO USUÁRIO, SENHA E SEGURANÇA"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/white"
                    android:text="@string/termo6"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="7.	MODIFICAÇÕES DESTES TERMOS E CONDIÇÕES"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/white"
                    android:text="@string/termo7"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="8.	EXCLUSÃO DE GARANTIAS E DE RESPONSABILIDADE"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/white"
                    android:text="@string/termo8"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="9.	DISPOSIÇÕES GERAIS"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/white"
                    android:text="@string/termo9"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="10.	LEGISLAÇÃO APLICÁVEL"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/white"
                    android:text="@string/termo10"/>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
