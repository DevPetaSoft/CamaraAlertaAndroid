<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.petasoft.camaraalerta.activity.SecondFrameDenuncia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="5dp"
            android:layout_margin="16dp"
            android:src="@drawable/page_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_green"
            android:layout_marginLeft="16dp"
            android:text="Descrição" />

        <EditText
            android:id="@+id/descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:textColor="@color/grey"
            android:backgroundTint="@color/grey"
            android:layout_margin="10dp"/>

        <CheckBox android:id="@+id/checkbox_denuncia_anonima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/grey"
            android:layout_marginLeft="16dp"
            android:text="Enviar Denúncia Anônima"
            android:textColor="@color/grey"
            android:onClick="onCheckboxClicked"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/white"
            android:text="ANTERIOR"
            android:layout_weight="1"
            android:onClick="anteriorFrame"/>

        <Button
            android:id="@+id/buttonEnviarDenuncia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:text="ENVIAR"/>


    </LinearLayout>

</RelativeLayout>
